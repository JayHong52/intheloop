    <div class="container">
        <h1 class="p-3">
            <%= title %> 
        </h1>
        <div class="row">
            <div class="col">
                <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">User</th>
                        <th scope="col">Title</th>
                        <th class="text-end" scope="col">
                            <a href="/survey/add" id="addButton" class="btn btn-dark btn-sm mb-1"><i class="fas fa-plus-circle"></i> Create Survey</a>
                        </th>
                      </tr>
                    </thead>
                    <tbody>
                        <% for (let count = 0; count < surveyList.length; count++) { %> 
                        <tr>
                            <th scope="row">
                                <%= count + 1 %> 
                            </th>
                            <td><%= surveyList[count].userName %> </td>
                            <td><%= surveyList[count].title %> </td>
                            <td class="text-end"> 
                                <!-- Modify & Remove Btn -->
                                <a href="/survey/edit/<%= surveyList[count]._id %>" class="btn btn-secondary btn-sm edit"><i class="fas fa-edit fa-sm"></i> Update </a>
                                <a href="/survey/delete/<%= surveyList[count]._id %>" class="btn btn-dark btn-sm edit"><i class="fas fa-trash-alt fa-sm"></i>  Delete </a>
                            </td>
                        </tr>
                        <% } %> 
                    </tbody>
                  </table>
            </div>
        </div>
    </div>